.tabs
  &-code
    height: 200px

  &-preview
    max-height: 200px
    overflow-y: auto
    border: 1px solid #C8CCD0
    padding: 10px


.split
  display: flex
  height: 100%

  &-code
    width: 50%
    height: 100%
    border-radius: 0px

  &-preview
    width: 50%
    padding: 10px
    border: 1px solid #C8CCD0
    border-left: none
    height: 100%
    overflow-y: auto